{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "airbnb-base",
        "prettier"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 11,
        "sourceType": "module"
    },
    "plugins": ["prettier"],    
    "rules": {
        "max-len": "off",
        "no-console": "off",
        "require-jsdoc": "off",
        "guard-for-in": "off",
        "prettier/prettier": ["error"],
        "no-plusplus": "off",
        "consistent-return": "off",
        "no-param-reassign": "off",
        "no-await-in-loop": "off",
        "no-lonley-if": "off"
    },
    "overrides": [
        {
            "files": ["*.test.js"],
            "rules": {
                "no-unused-vars": "off"
            }
        }
    ]
}